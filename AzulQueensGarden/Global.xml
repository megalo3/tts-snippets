<!-- For game configuration before starting -->
<Panel id="StartPanel" active="true" width="250" height="160" rectAlignment="MiddleCenter" returnToOriginalPositionWhenReleased="false" allowDragging="true" color="rgba(1,1,1,0.9)">
    <TableLayout autoCalculateHeight="true" cellBackgroundColor="clear">
        <Row preferredHeight="40"><Cell>
            <Text fontSize="24">Azul Queen's Garden</Text>
        </Cell></Row>
        <Row preferredHeight="80"><Cell>
            <Text fontSize="18">Everyone must select their player color before starting.</Text>
        </Cell></Row>
         <Row preferredHeight="40"><Cell>
            <Button id="Start" onClick="start" color="rgb(0.19,0.7,0.12)" textColor="white" fontSize="20"  height="40" width="120">Start</Button>
        </Cell></Row>
    </TableLayout>
</Panel>